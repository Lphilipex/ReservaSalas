@{
    ViewData["Title"] = "Home Page";
}


<div class="container mt-5 mb-5">
    <div class="text-center mb-4">
        <h1 class="display-4 fw-bold text-dark">Sistema De Reservas InovaSe</h1>
        <p class="lead">Conheça o <a href="https://inovase.org/" class="text-primary fw-bold">Inova Se</a>.</p>
    </div>

    <div id="carouselExampleCaptions" class="carousel slide shadow-lg rounded-3" data-bs-ride="carousel">

        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>

        <div class="carousel-inner carousel-inner-fixed" >

            <div class="carousel-item active">
                <img src="/imagens/Coworking.jpg" class="d-block w-100" alt="Área de Coworking">
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 p-2 rounded">
                    <h5>Área de Coworking</h5>
                    <p>Espaço amplo e colaborativo, ideal para reuniões informais e trabalho em equipe.</p>
                    <a href="/Reservas/Create" class="btn btn-sm btn-primary mt-2">Reservar agora</a>
                </div>
            </div>

            <div class="carousel-item">
                <img src="/imagens/corredorlabs.jpg" class="d-block w-100" alt="Corredor dos Laboratórios">
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 p-2 rounded">
                    <h5>Laboratório 01 - Labs</h5>
                    <p>Salas menores e reservadas para workshops, treinamentos técnicos ou reuniões com foco.</p>
                    <a href="/Reservas/Create" class="btn btn-sm btn-primary mt-2">Reservar agora</a>
                </div>
            </div>

            <div class="carousel-item">
                <img src="/imagens/lab1.jpeg" class="d-block w-100" alt="Laboratório de Inovação">
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 p-2 rounded">
                    <h5>Laboratório</h5>
                    <p>Localizado em andar superior com vista privilegiada, possui equipamentos de ponta.</p>
                    <a href="/Reservas/Create" class="btn btn-sm btn-primary mt-2">Reservar agora</a>
                </div>
            </div>

            <div class="carousel-item">
                <img src="/imagens/reunião.jpg" class="d-block w-100" alt="Sala de Reunião Fechada">
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 p-2 rounded">
                    <h5>Sala de Reunião Fechada</h5>
                    <p>Sala privativa e equipada para reuniões importantes e apresentações. Garante foco e silêncio.</p>
                    <a href="/Reservas/Create" class="btn btn-sm btn-primary mt-2">Reservar agora</a>
                </div>
            </div>

        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>

    </div>
</div>